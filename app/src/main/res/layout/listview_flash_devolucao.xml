<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@color/white">

    <TextView
        android:id="@+id/flash_devolucao_motivo"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="End incorreto/nÃ£o localizado"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/flash_devolucao_quantidade"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:gravity="right"
        android:text="99"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/flash_devolucao_caixas"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:text="99.99"
        android:gravity="right"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/flash_devolucao_participacao"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="280dp"
        android:text="99.99%"
        android:gravity="right"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:textStyle="bold" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/flash_devolucao_motivo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>