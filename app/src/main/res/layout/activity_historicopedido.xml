<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1E90FF"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/idHistorioPedido_IdentificacaoCliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Identificação do cliente"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/idHistoricoPedido_SubcanalCliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subcanal"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Spinner
        android:id="@+id/idHistoricoPedido_ListaPedidos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@android:id/list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp" />

</LinearLayout>