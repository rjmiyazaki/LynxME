<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#ffffff">

    <TextView
        android:id="@+id/txtIdentificacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Identificação"
        android:textColor="#000000"
        android:textSize="15sp" >
    </TextView>

    <TextView
        android:id="@+id/txtTipoPedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtIdentificacao"
        android:layout_marginTop="18dp"
        android:gravity="left"
        android:textColor="#000000"
        android:text="Tipo Pedido"
        android:textSize="10sp" >
    </TextView>

    <TextView
        android:id="@+id/txtValor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtTipoPedido"
        android:layout_alignBottom="@+id/txtTipoPedido"
        android:layout_centerHorizontal="true"
        android:gravity="left"
        android:textColor="#000000"
        android:text="R$ 0,00"
        android:textSize="10sp" >
    </TextView>

    <TextView
        android:id="@+id/txtSituacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtValor"
        android:layout_alignBottom="@+id/txtValor"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:textColor="#000000"
        android:text="Status"
        android:textSize="10sp" >
    </TextView>

</RelativeLayout>