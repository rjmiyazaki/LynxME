<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lista_produto_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@color/white">

    <TextView
        android:id="@+id/lista_produto_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Nome do produto"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lista_produto_label_codigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lista_produto_nome"
        android:text="Código:"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/lista_produto_info_codigo"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lista_produto_nome"
        android:layout_marginLeft="60dp"
        android:gravity="right"
        android:text="000000000000"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/lista_produto_label_unidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lista_produto_nome"
        android:text="Unidade:"
        android:layout_marginLeft="200dp"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/lista_produto_info_unidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lista_produto_nome"
        android:text="UN"
        android:layout_marginLeft="260dp"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/lista_produto_label_estoque"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lista_produto_label_codigo"
        android:text="Estoque:"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/lista_produto_info_estoque"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lista_produto_label_codigo"
        android:layout_marginLeft="60dp"
        android:gravity="right"
        android:text="000.000"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/lista_produto_label_preco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lista_produto_label_codigo"
        android:layout_marginLeft="200dp"
        android:text="Preço (R$):"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/lista_produto_info_preco"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lista_produto_label_codigo"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:text="000.000,00"
        android:textColor="@color/black"
        android:textSize="12sp" />

</RelativeLayout>