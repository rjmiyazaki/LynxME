<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:layout_alignParentBottom="true"
    android:background="@color/colorPrimary"
    tools:context=".control.activity.MainActivity">

    <TextView
        android:id="@+id/panel_info_prompt_cliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/panel_info_prompt_cliente"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="10sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/panel_info_cliente"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="10sp"
        android:gravity="right"
        android:textStyle="bold"
        android:layout_above="@+id/panel_info_prompt_positivacao"
        android:layout_alignLeft="@+id/panel_info_positivacao"
        android:layout_alignStart="@+id/panel_info_positivacao" />

    <TextView
        android:id="@+id/panel_info_prompt_positivacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/panel_info_prompt_positivacao"
        android:textSize="10sp"
        android:textStyle="bold"
        android:layout_below="@+id/panel_info_prompt_cliente"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/panel_info_positivacao"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="10sp"
        android:gravity="right"
        android:textStyle="bold"
        android:layout_below="@+id/panel_info_cliente"
        android:layout_toRightOf="@+id/panel_info_prompt_positivacao"
        android:layout_toEndOf="@+id/panel_info_prompt_positivacao"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp" />

    <TextView
        android:id="@+id/panel_info_prompt_pedidos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/panel_info_prompt_pedidos"
        android:textSize="10sp"
        android:textStyle="bold"
        android:layout_below="@+id/panel_info_prompt_positivacao"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/panel_info_pedidos"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="10sp"
        android:gravity="right"
        android:textStyle="bold"
        android:layout_below="@+id/panel_info_positivacao"
        android:layout_alignLeft="@+id/panel_info_positivacao"
        android:layout_alignStart="@+id/panel_info_positivacao" />

    <TextView
        android:id="@+id/panel_info_prompt_aenviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/panel_info_prompt_aenviar"
        android:textSize="10sp"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/panel_info_cliente"
        android:layout_alignBottom="@+id/panel_info_cliente"
        android:layout_toRightOf="@+id/panel_info_cliente"
        android:layout_toEndOf="@+id/panel_info_cliente"
        android:layout_marginLeft="78dp"
        android:layout_marginStart="78dp" />

    <TextView
        android:id="@+id/panel_info_aenviar"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="10sp"
        android:gravity="right"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/panel_info_prompt_aenviar"
        android:layout_alignBottom="@+id/panel_info_prompt_aenviar"
        android:layout_toRightOf="@+id/panel_info_prompt_aenviar"
        android:layout_toEndOf="@+id/panel_info_prompt_aenviar"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/panel_info_prompt_caixas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/panel_info_prompt_caixas"
        android:textSize="10sp"
        android:textStyle="bold"
        android:layout_below="@+id/panel_info_prompt_aenviar"
        android:layout_alignLeft="@+id/panel_info_prompt_aenviar"
        android:layout_alignStart="@+id/panel_info_prompt_aenviar" />

    <TextView
        android:id="@+id/panel_info_caixas"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="10sp"
        android:gravity="right"
        android:textStyle="bold"
        android:layout_alignTop="@+id/panel_info_prompt_caixas"
        android:layout_alignLeft="@+id/panel_info_aenviar"
        android:layout_alignStart="@+id/panel_info_aenviar" />


</RelativeLayout>

