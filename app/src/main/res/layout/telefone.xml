<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/idTelefone_edtTelefone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:inputType="number" >

        <requestFocus>
        </requestFocus>
    </EditText>

    <ImageButton
        android:id="@+id/idTelefone_btnConfirmar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/idTelefone_edtTelefone"
        android:background="@null"
        android:src="@drawable/confirm" >
    </ImageButton>

    <ImageButton
        android:id="@+id/idTelefone_btnCancelar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/idTelefone_btnConfirmar"
        android:background="@null"
        android:src="@drawable/cancel" >
    </ImageButton>

</RelativeLayout>