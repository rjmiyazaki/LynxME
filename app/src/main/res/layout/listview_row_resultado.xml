<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <TextView
        android:id="@+id/idRowResultado_NomeCategoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="Categoria"
        android:textColor="#000000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/idRowResultado_LabelMeta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/idRowResultado_NomeCategoria"
        android:text="Meta:"
        android:textColor="#000000"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/idRowResultado_Meta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idRowResultado_NomeCategoria"
        android:layout_marginLeft="2sp"
        android:layout_toRightOf="@+id/idRowResultado_LabelMeta"
        android:gravity="right"
        android:text="00.000,00"
        android:textColor="#000000"
        android:textSize="10sp"
        android:width="42sp" />

    <TextView
        android:id="@+id/idRowResultado_LabelRealizado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idRowResultado_NomeCategoria"
        android:layout_marginLeft="10sp"
        android:layout_toRightOf="@+id/idRowResultado_Meta"
        android:text="Realizado:"
        android:textColor="#000000"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/idRowResultado_Realizado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idRowResultado_NomeCategoria"
        android:layout_marginLeft="2sp"
        android:layout_toRightOf="@+id/idRowResultado_LabelRealizado"
        android:gravity="right"
        android:text="00.000,00"
        android:textColor="#000000"
        android:textSize="10sp"
        android:width="42sp" />

    <TextView
        android:id="@+id/idRowResultado_LabelTendencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idRowResultado_NomeCategoria"
        android:layout_marginLeft="10sp"
        android:layout_toRightOf="@+id/idRowResultado_Realizado"
        android:text="TendÃªncia:"
        android:textColor="#000000"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/idRowResultado_Tendencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idRowResultado_NomeCategoria"
        android:layout_marginLeft="2sp"
        android:layout_toRightOf="@+id/idRowResultado_LabelTendencia"
        android:gravity="right"
        android:text="00.000,00"
        android:textColor="#000000"
        android:textSize="10sp"
        android:width="42sp" />

    <TextView
        android:id="@+id/idRowResultado_Percentual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/idRowResultado_NomeCategoria"
        android:layout_marginLeft="5sp"
        android:layout_toRightOf="@+id/idRowResultado_Tendencia"
        android:gravity="right"
        android:text="000,00%"
        android:textColor="#000000"
        android:textSize="10sp" />

</RelativeLayout>