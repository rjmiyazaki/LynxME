<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@color/white">

    <TextView
        android:id="@+id/flash_positivacao_dia"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="00"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/flash_positivacao_diaSemana"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:gravity="right"
        android:text="SEG"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/flash_positivacao_clientes"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:text="999"
        android:gravity="right"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/flash_positivacao_positivados"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:text="999"
        android:gravity="right"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/flash_positivacao_vendaZero"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:text="999"
        android:gravity="right"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/flash_positivacao_percentual"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250dp"
        android:text="999.99%"
        android:gravity="right"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:textStyle="bold" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/flash_positivacao_dia"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>